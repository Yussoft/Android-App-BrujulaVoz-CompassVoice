<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_gradient"
    tools:context="com.npi.yus.brujulavoz.CompassActivity">


    <TextView
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/objectiveDegreeText"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/objectiveText"
        android:layout_toEndOf="@+id/objectiveText" />

    <TextView
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/objetivoT"
        android:id="@+id/objectiveText"
        android:layout_above="@+id/degreeText"
        android:layout_alignLeft="@+id/compass"
        android:layout_alignStart="@+id/compass"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />


    <TextView
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/degreeText"
        android:layout_below="@+id/objectiveDegreeText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/compassExp"
        android:id="@+id/compassExplain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView

        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/compass"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
